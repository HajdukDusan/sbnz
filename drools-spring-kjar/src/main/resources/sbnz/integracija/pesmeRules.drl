rule "The most popular songs"
	agenda-group "popularity"
	salience (100*($p.getPoints()+1))
	when
		$p:  Pesma();
		eval(songsRankCounter != null && songsRankCounter < 3)
	then
	    drools.getKnowledgeRuntime().setGlobal("songsRankCounter", songsRankCounter + 1);
	    if(songsRankCounter < 3){
            System.out.println("\tHighest ranked song => : " + $p.getNaziv() + " " + $p.getPoints());
	    }
end;