rule "Below average score"
    salience 10
    agenda-group "song_score"
    no-loop
    when
        $p : Pesma(averageOcena < 2.5)
    then
        modify($p){setPoints($p.getPoints() * 0.8)};
        System.out.println("Below average rating" + $p.getPoints());
    end
rule "Average score"
    salience 10
    agenda-group "song_score"
    no-loop
    when
        $p : Pesma(averageOcena >= 2.5, averageOcena <4)
    then
